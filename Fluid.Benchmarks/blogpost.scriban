
{{ if imagePath == nil }}
    <header class="masthead" style="background-image: url('{{ "~/TheBlogTheme/img/post-bg.jpg" | href }}')">
{{ else }}
    {{ anchor = Model.ContentItem.Content.BlogPost.Image.Anchors.first }}
    <header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url profile: "banner" anchor: anchor }}')">
{{ end }}
